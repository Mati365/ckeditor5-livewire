{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "src",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "~/test-utils": ["./test-utils"],
      "~/test-utils/*": ["./test-utils/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "outDir": "./dist/esm"
  },
  "include": [
    "**/*.ts",
    "**/*.test.ts"
  ]
}
