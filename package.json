{
  "private": true,
  "scripts": {
    "dev": "npx concurrently -c \"#00BCD4,#009688\" \"cd playground && composer dev\" \"pnpm run npm_package:watch\" --names playground,npm_package --kill-others",
    "typecheck": "pnpm run npm_package:typecheck && pnpm run playground:typecheck",
    "playground:typecheck": "pnpm run typecheck --workspace=ckeditor5-livewire",
    "npm_package:typecheck": "pnpm run typecheck --workspace=ckeditor5-livewire",
    "npm_package:watch": "pnpm run watch --workspace=ckeditor5-livewire",
    "npm_package:build": "pnpm run build --workspace=ckeditor5-livewire",
    "npm_package:test": "pnpm run test --workspace=ckeditor5-livewire",
    "npm_package:test:watch": "pnpm run test:watch --workspace=ckeditor5-livewire"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix"
    ],
    "*.php": [
      "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    ]
  }
}
